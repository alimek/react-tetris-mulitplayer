{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "sourceRoot": "src",
    "sourceMap": true,
    "paths": {
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "actions/*": ["actions/*"],
      "screens/*": ["screens/*"],
      "reducers/*": ["reducers/*"],
      "utils/*": ["utils/*"],
      "*": ["*", "*.ios", "*.android"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}